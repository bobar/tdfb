<table id="table-filter"
       data-classes="table table-hover"
       data-page-list="[10, 25, 100, ALL]"
       data-page-size="100"
       data-pagination="true"
       data-search="true"
       data-show-columns="true"
       data-show-export="true"
       data-show-pagination-switch="true"
       data-toggle="table">
  <thead>
    <tr>
      <% @columns.each do |column| %>
        <th data-field="<%= column %>"
            data-sortable="true"
            <% unless @visible_columns.include?(column) %>data-visible="false"<% end %>>
          <%= I18n.t(column) %>
        </th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <% @columns.each do |column| %>
          <td><%= account.send(column.to_sym) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
