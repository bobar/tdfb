<div class="row">
  <% { binets_positive: @binets_positive, binets_negative: @binets_negative }.each do |k, v| %>
  <div class="col-md-6">
    <h3><%= I18n.t(k) %></h3>
    <table class="table table-condensed table-bordered table-striped table-hover">
      <thead>
        <tr>
          <td><%= I18n.t(:trigramme) %></td>
          <td><%= I18n.t(:name) %></td>
          <td><%= I18n.t(:balance) %></td>
        </tr>
      </thead>
      <tbody>
        <% v.each do |binet| %>
        <% next if binet.id == 1 %>
        <tr>
          <td><a href="/account/<%= binet.trigramme %>"><%= binet.trigramme %></a></td>
          <td><%= binet.first_name %> <%= binet.name %></td>
          <td><%= number_with_precision(binet.balance / 100.0, strip_insignificant_zeros: true, significant: false, precision: 2, delimiter: ' ') %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <% end %>
</div>
