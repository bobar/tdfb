<div class="row text-center">
  <div class="col-md-12">
    <h1><%= I18n.t(:file_import) %></h1>
  </div>
</div>
<br>
<div class="row">
  <div class="col-md-12">
    <%= bootstrap_form_tag(remote: true, url: "/zde", method: :post) do |f| %>
      <table class="table table-condensed table-bordered table-striped table-hover">
        <thead>
          <tr>
            <td></td>
            <td><%= I18n.t(:trigramme) %></td>
            <td><%= I18n.t(:name) %></td>
            <td><%= I18n.t(:price) %></td>
            <td><%= I18n.t(:comment) %></td>
          </tr>
        </thead>
        <tbody>
          <% @entries.each do |e| %>
            <tr class="<%= e[:level] %>">
              <td>
                <input
                  type="checkbox"
                  <%= 'disabled' if e[:level] == :fatal %>
                  <%= 'checked' if e[:level].nil? || e[:level] == :warning %>
                >
              </td>
              <td><%= e[:trigramme] %></td>
              <td><%= e[:name] %></td>
              <td><%= e[:price] %></td>
              <td>
                <% e[:comments].each do |c| %>
                  <%= c %><br>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
